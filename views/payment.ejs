<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />

    <title>Credit card</title>
    <style>
      body {
        margin: 0;
        padding: 0;
        font-size: 12px !important;
        color: #000 !important;
        font-family: Arial !important;
      }
    </style>
  </head>
  <body>
    <% var currentYear = new Date().getFullYear(); %>
    <div class="container">
      <div class="row" style="height: 100vh">
        <div class="col"></div>
        <div class="col align-items-center align-self-center">
          <% if(typeof alert !== 'undefined') { %> <%
          alert.forEach(function(error) { %>
          <div class="alert alert-danger" role="alert"><%= error.msg %></div>
          <% }) %> <% } %> <% if (typeof success !== 'undefined') { %>
          <div class="alert alert-success" role="alert"><%= success %></div>
          <% } %> <% if (typeof error !== 'undefined') { %>
          <div class="alert alert-danger" role="alert"><%= success %></div>
          <% } %>
          <div class="card">
            <div class="card-header">
              <h6 class="text-center fw-semibold">Enter Credit Card Details</h6>
            </div>
            <div class="card-body">
              <form name="paymentForm" method="POST" action="/payment">
                <div class="mb-3">
                  <label for="cardHolder" class="form-label fw-semibold"
                    >CARD HOLDER</label
                  >
                  <input
                    type="text"
                    class="form-control"
                    id="cardHolder"
                    name="card_holder"
                  />
                </div>
                <div class="mb-3">
                  <label for="cardNumber" class="form-label fw-semibold"
                    >CARD NUMBER</label
                  >
                  <input
                    type="text"
                    class="form-control"
                    id="cardNumber"
                    name="card_number"
                  />
                </div>
                <div class="row">
                  <div class="col">
                    <div class="mb-3">
                      <label for="expireMonth" class="form-label fw-semibold"
                        >EXPIRATION MM</label
                      >
                      <select
                        class="form-select"
                        name="expire_month"
                        aria-label="expire month"
                      >
                        <option value="">MM</option>
                        <% for(var i = 1; i <= 12; i++) { %>
                        <option value="<%= i %>"><%= i %></option>
                        <% } %>
                      </select>
                    </div>
                  </div>
                  <div class="col">
                    <div class="mb-3">
                      <label for="expireYear" class="form-label fw-semibold"
                        >EXPIRATION YYYY</label
                      >

                      <select
                        class="form-select"
                        name="expire_year"
                        aria-label="expire year"
                      >
                        <option value="">YYYY</option>
                        <% for(var i = currentYear; i <= currentYear + 20; i++)
                        { %>
                        <option value="<%= i %>"><%= i %></option>
                        <% } %>
                      </select>
                    </div>
                  </div>
                  <div class="col">
                    <div class="mb-3">
                      <label for="cvv" class="form-label fw-semibold"
                        >CVV</label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="cvv"
                        name="cvv"
                      />
                    </div>
                  </div>
                </div>
                <div class="d-grid gap-2">
                  <button class="btn btn-primary" type="submit">Submit</button>
                </div>
              </form>
            </div>
          </div>
        </div>
        <div class="col"></div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
    <script>
      const currentYear = new Date().getFullYear();
    </script>
  </body>
</html>
